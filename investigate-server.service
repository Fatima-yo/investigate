[Unit]
Description=Investigate Blockchain Explorer Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/investigate
ExecStart=/usr/local/bin/node server.js
Restart=always
RestartSec=5
Environment=NODE_ENV=production
Environment=PORT=3001

# Output to journal
StandardOutput=journal
StandardError=journal
SyslogIdentifier=investigate-server

[Install]
WantedBy=multi-user.target
